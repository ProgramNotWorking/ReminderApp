<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Base.Theme.ReminderApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item> //+
        <item name="windowActionBar">false</item> //+

        <item name="colorPrimaryVariant">@color/white</item> //+
        <item name="colorPrimary">@color/white</item> //+

        <item name="android:fontFamily">@font/roboto</item> //+
        <item name="android:textColor">@color/black</item> //+
        <item name="android:textColorHint">@color/black</item>

        <item name="android:windowBackground">@color/windowBackgroundDay</item> //+

        <item name="android:statusBarColor">@android:color/transparent</item> //-
        <item name="android:windowLightStatusBar">true</item> //+

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>


    <style name="Theme.ReminderApp" parent="Base.Theme.ReminderApp" />

    <style name="MainContainerStyle">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="CardContainerStyle">
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <style name="ClickableTextStyle">
        <item name="android:textColor">@color/link_color</item>
    </style>

    <style name="LayoutWithMiddleDividers">
        <item name="android:dividerPadding">@dimen/divider_padding</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/separator</item>
    </style>

    <style name="LayoutWithMiddleDividersMainContainer" parent="MainContainerStyle">
        <item name="android:paddingHorizontal">@dimen/margin_start_text</item>
    </style>

    <style name="CardWithMiddleDividersMainContainer" parent="CardContainerStyle">
        <item name="android:paddingHorizontal">@dimen/margin_start_text</item>
    </style>

    <style name="LayoutWithDividersContainer" parent="LayoutWithMiddleDividersMainContainer">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="BaseItemTextStyle">
        <item name="android:textSize">@dimen/normal_item_text_size</item>
    </style>

    <style name="ArrowImageStyle">
        <item name="tint">@dimen/normal_item_text_size</item>
    </style>

    <style name="SubheadItemTextStyle" parent="BaseItemTextStyle">
        <item name="android:textColor">@color/subheadTextColorDay</item>
    </style>

    <style name="MainFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="srcCompat">@drawable/add_icon</item>
    </style>

    <style name="PickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light"/>

    <style name="EditTextStyle" parent="Theme.AppCompat">
        <item name="android:inputType">textCapSentences</item>
    </style>

</resources>
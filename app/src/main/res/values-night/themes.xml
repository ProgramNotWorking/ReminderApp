    <style name="MainContainerStyle">
        <item name="android:background">#202020</item>
    </style>

    <style name="CardContainerStyle">
        <item name="cardBackgroundColor">#202020</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxBackgroundColor">#202020</item>
        <item name="boxStrokeColor">@color/boxStrokeColorNight</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="SubheadItemTextStyle" parent="BaseItemTextStyle">
        <item name="android:textColor">@color/subheadTextColorNight</item>
    </style>

    <style name="MainFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="srcCompat">@drawable/add_icon</item>
    </style>

    <style name="DatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/light_grey</item>
    </style>

    <style name="TimePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="clockNumberTextColor">@color/black</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat"/>

